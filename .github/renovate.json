{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":preserveSemverRanges",
    ":widenPeerDependencies",
    ":semanticCommits",
    ":automergeMinor",
    ":automergeTesters",
    ":automergeRequireAllStatusChecks"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["NHibernate"],
      "automerge": false
    }
  ],
  "recreateWhen": "never",
  "major": {
    "dependencyDashboardApproval": true
  }
}